---
import LinkMenu from '../components/LinkMenu.astro';
import CallToAction from '../components/CallToAction.astro';

---

<header class="min-h-[32rem] h-screen w-full text-[--secundary-color] relative">
    <nav id="nav"class="mx-auto max-w-[80%] overflow-hidden py-10 grid justify-between items-center grid-cols-[max-content_max-content] md:flex md:relative z-30">
        <h2 class="text-4xl font-bold row-start-1 row-end-2 z-20">Nivek</h2>
        <ul id="menuLinks" class="absolute bg-[--secundary-color-one] inset-0 z-30 grid content-center gap-6 pl-20 text-xl tracking-wide duration-300 md:static md:flex md:p-0 md:bg-transparent">
            <LinkMenu href="#home">Home</LinkMenu>
            <LinkMenu href="#visual">Visual</LinkMenu>
            <LinkMenu href="#marketing">Marketing</LinkMenu>
            <LinkMenu href="#events">Events</LinkMenu>
            <LinkMenu href="#apps">Apps</LinkMenu>
        </ul>
        <a href="#nav" id="btnHam" class="cursor-pointer col-start-[-2] col-end-[-1] row-start-1 row-end-2  transition-transform duration-300 z-30 md:hidden">
            <svg width="40" height="40" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M4 6l16 0"></path>
                <path d="M4 12l16 0"></path>
                <path d="M4 18l16 0"></path>
             </svg>
        </a>
        <a href="#" id="closeMenu" class="cursor-pointer col-start-[-2] col-end-[-1] row-start-1 row-end-2  transition-transform duration-300 z-30 md:hidden">
            <svg width="40" height="40" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M18 6l-12 12"></path>
                <path d="M6 6l12 12"></path>
             </svg>
        </a>
    </nav>
    <div class="relative w-4/5 my-4 mx-auto flex flex-col h-4/5 justify-between items-center min-h-[35rem] md:h-4/5 md:max-h-full gap-4 z-20 md:flex md:flex-col md:items-center">
        <div>
         <h1 class="lg:text-6xl text-6xl text-center">Nivek <strong class="text-[--secundary-color-one]">Studio</strong></h1>
        <p class="text-xl text-[--secundary-color] text-center">Registra tu <strong class="text-[--secundary-color-one]">marca</strong> con nuestros profesionales y asegura el futuro de tu negocio.</p>
        </div>
        <div class="grid gap-4 md:flex-grow bottom-20 absolute md:flex">
            <CallToAction href="#">Call To Action</CallToAction>
            <CallToAction href="#">Call To Action</CallToAction>
        </div>
    </div>
    <span class="top-0 absolute bg-gradient-to-b from-black/80 to-[--bg-one] z-10 h-full w-full"></span>
    <video src="/bg_hero.mp4" class="absolute object-cover object-left-top h-full w-full top-0 z-0" autoplay loop muted></video>
</header>

<style>
    video {
        clip-path: polygon(0% 0%, 100% 0%, 100% 95%, 50% 100%, 0% 95%, 0 95%);
    }

    #nav {
        --open-menu: scale(1);
        --close-menu: scale(0);
        --state-menu: translateX(-100%);
    }
    #btnHam{
        transform: var(--open-menu);
    }
    #closeMenu {
        transform: var(--close-menu);
    }
    #menuLinks{
        transform: var(--state-menu);
    }
    #nav:target{
        --state-menu: translateX(0);
        --open-menu: scale(0);
        --close-menu: scale(1);
    }

    @media (min-width:768px) {
        #nav {
        --open-menu: scale(0);
        --close-menu: scale(0);
        --state-menu: translateX(0);
        }
        #btnHam{
            transform: var(--open-menu);
        }
        #closeMenu {
            transform: var(--close-menu);
        }
        #menuLinks{
            transform: var(--state-menu);
        }
        #nav:target{
            --state-menu: translateX(0);
            --open-menu: scale(0);
            --close-menu: scale(0);
        }
    }
</style>
